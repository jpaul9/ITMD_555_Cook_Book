<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cook_book">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cook_Book"
        android:usesCleartextTraffic="true">
        <activity android:name=".EditRecipe"></activity>
        <activity
            android:name=".AddRecipe"
            android:label="@string/title_activity_add_recipe"
            android:theme="@style/Theme.Cook_Book.NoActionBar3" />
        <activity
            android:name=".RecipeDetails"
            android:label="@string/title_activity_recipe_details"
            android:theme="@style/Theme.Cook_Book.NoActionBar2" />
        <activity
            android:name=".Recipes_Dashboard"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".Profile_page" />
        <activity android:name=".Splash_Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Registration">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login_options"
            android:parentActivityName=".Login_options" />
    </application>

</manifest>